<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.camdavejakerob.classmanager.ClassCreatorActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Class id label -->
        <TextView
            style="@style/FormLabelStyle"
            android:text="@string/class_id_prompt" />
            <!-- User enters id of class here -->
            <EditText
                android:id="@+id/class_id_form"
                style="@style/FormEditTextShortStyle"
                android:hint="@string/class_id_hint" />


        <!-- Class name label -->
        <TextView
            style="@style/FormLabelStyle"
            android:text="@string/class_name_prompt" />
            <!-- User enters NAME of restaurant here -->
            <EditText
                android:id="@+id/class_name_form"
                style="@style/FormEditTextShortStyle"
                android:hint="@string/class_name_hint" />

        <!-- Class days label -->
        <TextView
            style="@style/FormLabelStyle"
            android:text="@string/class_days_prompt" />

        <!-- Input for days -->
        <LinearLayout
            style="@style/FormLabelStyle"
            android:orientation="vertical">

            <!-- User enters days of class here -->
            <CheckBox
                android:id="@+id/monday_button"
                style="@style/SmallButtonStyle"
                android:text="Monday" />

            <CheckBox
                android:id="@+id/tuesday_button"
                style="@style/SmallButtonStyle"
                android:text="Tuesday" />

            <CheckBox
                android:id="@+id/wednesday_button"
                style="@style/SmallButtonStyle"
                android:text="Wednesday" />

            <CheckBox
                android:id="@+id/thursday_button"
                style="@style/SmallButtonStyle"
                android:text="Thursday" />

            <CheckBox
                android:id="@+id/friday_button"
                style="@style/SmallButtonStyle"
                android:text="Friday" />

        </LinearLayout>

        <!-- Class startTime label -->
        <TextView
            style="@style/FormLabelStyle"
            android:text="@string/class_startTime_prompt" />

        <!-- User enters startTime of class here -->
        <TimePicker
            android:id="@+id/startTimePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner" />

        <!-- Class endTime label -->

        <TextView
            style="@style/FormLabelStyle"
            android:text="@string/class_endTime_prompt" />

        <!-- User enters endTime of class here -->
        <TimePicker
            android:id="@+id/endTimePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"/>

        <!-- Class room label -->
        <TextView
            style="@style/FormLabelStyle"
            android:text="@string/class_room_prompt" />

            <!-- User enters room of class here -->
            <EditText
                android:id="@+id/class_room_form"
                style="@style/FormEditTextShortStyle"
                android:hint="@string/class_room_hint" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/class_add_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:src="@drawable/ic_message" />

    </LinearLayout>

</ScrollView>
